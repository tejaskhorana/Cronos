<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/eventlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/eventname"
                android:layout_alignStart="@+id/eventname"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:elevation="0dp"
                android:text="Klaus Room 3023"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/eventname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="91dp"
                android:layout_marginStart="91dp"
                android:layout_weight="1"
                android:text="CS 3600 Group Meeting"
                android:textColor="@android:color/background_light"
                android:layout_alignTop="@+id/eventimage"
                android:layout_toRightOf="@+id/eventimage"
                android:layout_toEndOf="@+id/eventimage" />

            <TextView
                android:id="@+id/eventtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/eventimage"
                android:layout_alignLeft="@+id/eventlocation"
                android:layout_alignStart="@+id/eventlocation"
                android:layout_marginBottom="11dp"
                android:text="3:00 PM - 6:00 PM"
                android:textColor="@android:color/background_light" />

            <ImageView
                android:id="@+id/eventimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="41dp"
                android:layout_marginStart="41dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/calendar_lite"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/eventtime"
                android:layout_marginLeft="46dp"
                android:layout_marginStart="46dp"
                android:layout_toEndOf="@+id/eventname"
                android:layout_toRightOf="@+id/eventname"
                android:text="                     " />

        </RelativeLayout>
    </ViewFlipper>


</LinearLayout>